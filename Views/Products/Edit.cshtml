@model Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container shadow-lg col-md-6 p-5">
    <form asp-action="Edit" method="post">
        @* <div class="form-group"> *@
        @*     <label asp-for="Id">Id</label> *@
        @*     <input class="form-control" asp-for="Id" /> *@
        @* </div> *@
        <div class="form-group p-1 text-center">
            <label class="bordered">Update Product Info</label>
        </div>
        <div class="form-group p-1">
            <label asp-for="Name">Name</label>
            <input class="form-control m-2" asp-for="Name" />   @*Don't need input type it's determine base on asp-for tage helper*@
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group p-1">
            <label asp-for="Price">Price</label>
            <input class="form-control m-2" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group p-1">
            <label asp-for="StockQuantity">StockQuantity</label>
            <input class="form-control m-2" asp-for="StockQuantity" />
            <span asp-validation-for="StockQuantity" class="text-danger"></span>
        </div>


        <div class="text-center">
            <button class="btn btn-success m-1 text-center" type="submit">Update</button>
        </div>

        <div class="text-end">
            <a class="btn btn-secondary text-white m-1" asp-area="" asp-controller="Products" asp-action="Index">Back</a>
        </div>

    </form>
</div>