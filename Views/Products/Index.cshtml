@model List<Product>   //

@{
    ViewData["Title"] = "Products Page";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">


<div class="text-center">

    <h1 class="display-2">Products</h1>
    
    <a asp-action="Create" asp-controller="Products" class="btn btn-sm btn-primary"><i class="bi bi-plus-circle"></i>Add</a>

    <table class="table">
        <thead>
            <tr>
                @* <th> *@
                @*     Id *@
                @* </th> *@
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>

                <th>
                    StockQuantity
                </th>

                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(u => u.Price))  // Order by Price
            {
                <tr>
                    @* <td> *@
                    @*     @item.Id *@
                    @* </td> *@
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @item.StockQuantity
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary"><i class="fa fa-edit"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>