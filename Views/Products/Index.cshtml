@model List<Product>   //

@{
    ViewData["Title"] = "Products Page";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">


<div class="text-center shadow-lg rounded p-3">

    <h1 class="display-4">All Products</h1>
    <table class="table">
        <thead>
            <tr>
                @* <th> *@
                @*     Id *@
                @* </th> *@
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>

                <th>
                    StockQuantity
                </th>

                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(u => u.Price))  // Order by Price
            {
                <tr>
                    @* <td> *@
                    @*     @item.Id *@
                    @* </td> *@
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @item.StockQuantity
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary"><i class="fa fa-edit"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?');"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>